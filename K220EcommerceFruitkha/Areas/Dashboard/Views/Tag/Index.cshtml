@model IEnumerable<Tag>
<a href="/dashboard/tag/create" class="btn btn-outline-primary mb-3">Create</a>


<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>IsDeleted</th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>IsDeleted</th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var tag in Model)
                    {
                        <tr>
                            <td>@tag.Id</td>
                            <td>@tag.Name</td>
                            <td>@tag.IsDeleted</td>
                            
                            <td class="col-2">
                                <a href="/dashboard/tag/edit/@tag.Id" class="btn btn-outline-warning">Edit</a>
                                <a href="/dashboard/tag/delete/@tag.Id" class="btn btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
