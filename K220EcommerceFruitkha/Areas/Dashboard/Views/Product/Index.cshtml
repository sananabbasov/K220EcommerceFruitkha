@model IEnumerable<Product>
<a href="/dashboard/product/create" class="btn btn-outline-primary mb-3">Create</a>


<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Discount</th>
                        <th>Photo</th>
                        <th>Category</th>
                        <th>Quantity</th>
                        <th>IsDeleted</th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Discount</th>
                        <th>Photo</th>
                        <th>Category</th>
                        <th>Quantity</th>
                        <th>IsDeleted</th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Id</td>
                            <td>@product.Name</td>
                            <td>@product.Price ₼</td>
                            <td>@product.Discount ₼</td>
                            <td>
                                <img src="@product.PhotoUrl" width="200" />
                            </td>
                            <td>@product.Category.Name</td>
                            <td>@product.Quantity</td>
                            <td>@product.IsDeleted</td>
                            <td class="col-2">
                                <a href="/dashboard/product/edit/@product.Id" class="btn btn-outline-warning">Edit</a>
                                <a href="/dashboard/product/delete/@product.Id" class="btn btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
